package lista13java;
import java.util.Scanner;
public class ex6 {

	public static void main(String[] args) {
		int raio, diametro, comprimento, area;
		Scanner entrada = new Scanner(System.in);
		System.out.println("Insira o Raio de uma circunferencia");
		raio = entrada.nextInt();
		//PI=3
		comprimento = raio * 3 * 2;
		area = (raio * raio) * 3;
		diametro = raio*2;
		System.out.println("O comprimento dessa Circunferencia é "+comprimento+"m");
		System.out.println("O Diametro dessa circunferencia é "+diametro+"m");
		System.out.println("A Area dessa circunferencia é "+area+"m²");
	}

}
